<div class="row">
    <div class="col-md-3">
<%= render 'layouts/list',book: @book, user: @user %>
</div>
<div class="col-md-8 offset-md-1">
    <h1>Books</h1>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
<tr>
<% @books.each do |book| %>

    <td> <%=link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>

<% end %>
</tr>
</tbody>
</table>
</div>