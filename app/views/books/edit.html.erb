<div class="container">
  <div class="row">
    <div class="offset-md-4">
<h1>Editing Book</h1>
<%= form_with model:@book,local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<p><%= f.text_area :body %></p>
<p><%= f.submit 'Update Book', class: "btn btn-sm btn-success" %></p>
<% end %>
<%= link_to "Show", book_path(@book) %>
<%= link_to "Back",  :back %>
</div>
</div>
</div>