<p id="notice">
     <%= notice %>
<div class="container  px-5 px-sm-0">
<div class="row">
    <div class="col-md-3">
<%= render 'books/list2',user: @user %>

<h1>New book</h1>
<div class="form-body">
<%= form_with model:@new_book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit'Create Book', class: "btn btn-sm btn-success" %>

<% end %>
</div>
</div>
<div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table class="table">


    <tr>
    <td><%= link_to user_path(@user.id) do %>
    <%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
    <% end %>
    <p><%= link_to @user.name, user_path(@user) %></p></td>
    <td><%=link_to @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
    <td><%= link_to'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
    <td><%= link_to'Destroy', book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %></td>
    <% end %>
    </tr>
    </table>
</div>
</div>
</div>