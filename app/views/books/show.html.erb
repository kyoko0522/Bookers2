<p id="notice">
     <%= notice %>
<div class="container">
<div class="row">
    <div class="col-md-3">
<%= render 'books/list2',user: @user %>

<h1>New book</h1>
<div class="form-body">
<%= form_with model:@new_book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit'Create Book' %>

<% end %>
</div>
</div>
<div class="col-md-9">
    <h1>Book detail</h1>
    <table class="table">


    <tr>
    <td><%= attachment_image_tag @user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg"%></td>
    <td><%=link_to @book.title %></td>
    <td><%= @book.body %></td>
    <td><%= link_to'Edit', edit_book_path(@book) %></td>
    <td><%= link_to'Destroy', book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
    </tr>
    </table>
</div>
</div>
</div>