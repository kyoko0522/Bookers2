<p id="notice">
     <%= notice %>

<div class="row">
    <div class="col-md-3">
<%= render 'layouts/list',book: @book, user: @user %>
</div>
<div class="col-md-8 offset-md-1">

<%= form_with model:@new_book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit'Create Book' %>

<% end %>

<h1>Book detail</h1>

    <tr>
    <td><%=link_to @book.title %></td>
    <td><%= @book.body %></td>
    <td><%= link_to'Edit', edit_book_path(@book) %></td>
    <td><%= link_to'Destroy', book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
    </tr>

